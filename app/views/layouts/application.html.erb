<!DOCTYPE html>
<html>
	<head>
		<title>Globy, the true meaning of following</title>
		<%= stylesheet_link_tag :all %>
		<%#= javascript_include_tag :defaults %>
		<%= javascript_include_tag '/javascripts/jquery.js' %>
		<%= javascript_include_tag '/javascripts/jquery-ui.js' %>
		<%= javascript_include_tag '/javascripts/application.js' %>
		<%= stylesheet_link_tag '/stylesheets/jquery-ui.css' %>
		<%= csrf_meta_tag %>
		<%= yield :head %>
	</head>
	<body>
		<div class="wrapper">
			<div id="header">
				<div class="fl">
					<h1>Globy</h1>
					<%= t('.slogan') %>
				</div>
				<div id="menu" class="fr">
					<div id="utils">
						<%= link_to(t('.account'), user_path(current_user), :class => 'icon-right-small icon-account') if current_user.present?%>
						<%= button_to(t('.logout'), user_session_path(current_user), :method => :delete, :class => 'icon-right-small icon-logout logout') if current_user.present? %>
					</div>
				</div>
				<%= clear_div %>
				
				<%= render :partial => 'shared/menu' %>
			</div>
		
			<div id="main">
				<% if flash[:notice].present? %>
					<%= flash[:notice] %>
				<% end %>

				<% if flash[:error].present? %>
					<div class="ui-icon ui-icon-alert">
						<strong>Error</strong><%= flash[:error] %>
					</div>
				<% end %>
			
				<%= yield %>
			</div>
			<div class="push"></div>
		</div>
		
		<div id="footer">
			<div class="inner">Globy (c) 2010</div>
		</div>
	</body>
</html>
